package read;

import java.io.IOException;

public class SimpleRead {

	public static void main(String args[]) {
		int b = 0, count = 0;

		try {
			b = System.in.read();
			while (b != -1) {
				System.out.print(b);
				count++;
				b = System.in.read();				
				System.out.println(" : total byte:" + count);
			}
		} catch (Exception e) {
			// TODO: handle exception
		}
	}
}
