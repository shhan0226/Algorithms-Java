package read;

import java.io.IOException;

public class SimpleRead {
	
	public static void main(String args[]) {
		int b = 0, count = 0;
		
		
			b = System.in.read();
			while(b != -1) {
				System.out.print((char)b);
				count++;
				b = System.in.read();
	
		
		System.out.println();
		System.out.println("total byte:" + count);
	}

}
